# ET Heatmap Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (Development)
DATABASE_URL=sqlite:///./data/et_heatmap.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/et_heatmap

# =============================================================================
# YOUTUBE API
# =============================================================================

# Required for YouTube data ingestion
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key-here

# Optional: Specific channel ID to monitor
# YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# REDDIT API (Optional)
# =============================================================================

# Required if Reddit ingestion is enabled
# Get credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your-client-id
REDDIT_CLIENT_SECRET=your-client-secret
REDDIT_USERNAME=your-username
REDDIT_PASSWORD=your-password
REDDIT_USER_AGENT=et-heatmap/0.1.0

# =============================================================================
# ERROR MONITORING (Sentry)
# =============================================================================

# Sentry DSN for error tracking (get from https://sentry.io)
# If not set, Sentry will be disabled
SENTRY_DSN=https://your-key@sentry.io/your-project-id

# Environment name (development, staging, production)
SENTRY_ENVIRONMENT=development

# Release version (for tracking which version has errors)
SENTRY_RELEASE=et-heatmap@0.1.0

# Performance monitoring sample rate (0.0 to 1.0)
# 0.1 = 10% of transactions are traced
# Lower this in high-traffic production (e.g., 0.01 = 1%)
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (set to "none" to disable file logging)
LOG_FILE=logs/app.log

# =============================================================================
# API SERVER
# =============================================================================

# API server port
PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# PIPELINE SCHEDULING
# =============================================================================

# Timezone for scheduled runs (default: America/Los_Angeles)
# PIPELINE_TIMEZONE=America/Los_Angeles

# Daily run schedule (cron format)
# Default: 6:00 AM PT daily
# DAILY_RUN_SCHEDULE=0 6 * * *

# Weekly baseline schedule (cron format)
# Default: Sunday 3:00 AM PT
# WEEKLY_BASELINE_SCHEDULE=0 3 * * 0

# =============================================================================
# BACKUP
# =============================================================================

# Backup directory
# BACKUP_DIR=backups

# Backup retention (number of backups to keep)
# BACKUP_KEEP_DAILY=7
# BACKUP_KEEP_WEEKLY=4
# BACKUP_KEEP_MONTHLY=12

# Remote backup destination (optional)
# AWS S3
# BACKUP_S3_BUCKET=your-bucket-name
# BACKUP_S3_PREFIX=et-heatmap-backups

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable debug mode (more verbose logging)
# DEBUG=false

# Skip expensive operations for faster testing
# SKIP_ML_MODELS=false
